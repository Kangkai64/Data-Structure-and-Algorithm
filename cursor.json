{
  "project": {
    "name": "Clinic Management System",
    "description": "A Java-based clinic management system with layered architecture",
    "language": "java",
    "framework": "maven"
  },
  "mcp": {
    "enabled": true,
    "context": {
      "includePatterns": [
        "src/main/java/**/*.java",
        "src/test/java/**/*.java",
        "src/main/resources/**/*",
        "pom.xml"
      ],
      "excludePatterns": [
        "target/**",
        ".idea/**",
        "*.class",
        "*.jar"
      ]
    },
    "tools": {
      "fileOperations": true,
      "terminalAccess": true,
      "codeAnalysis": true
    }
  },
  "ai": {
    "contextWindow": "large",
    "focusAreas": [
      "entity",
      "control", 
      "boundary",
      "dao",
      "utility",
      "adt"
    ],
    "preferences": {
      "codeStyle": "java",
      "architecture": "layered",
      "database": "mysql",
      "patterns": ["dao", "mvc", "singleton"]
    }
  },
  "development": {
    "javaVersion": "23",
    "buildTool": "maven",
    "database": "mysql",
    "connectionPool": "hikaricp"
  }
} 